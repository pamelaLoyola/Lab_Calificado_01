<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:padding="50dp">

        <ImageView
            android:layout_width="@dimen/foto_width"
            android:layout_height="@dimen/foto_height"
            android:src="@drawable/mujer"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_height"
            android:src="@drawable/advantus"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginBottom="@dimen/margin_bottom_logo"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_nombre_mujer"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/nombre_size"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_cargo_mujer"
            android:textColor="@color/color_text_cargo"
            android:textSize="@dimen/cargo_nombre_size"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_txt_dni"
            android:textColor="@color/color_text_cargo"
            android:textSize="@dimen/main_sub_size"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_txt_celular"
            android:textColor="@color/color_text_cargo"
            android:textSize="@dimen/main_sub_size"
            android:gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_txt_correo"
            android:textColor="@color/color_text_cargo"
            android:textSize="@dimen/main_sub_size"
            android:gravity="center"/>


        <ImageView
            android:layout_width="@dimen/barra_width"
            android:layout_height="@dimen/barra_height"
            android:src="@drawable/barras"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>
    </LinearLayout>



</LinearLayout>

